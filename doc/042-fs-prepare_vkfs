# i >> this section is done as root. you can now exit the
# mlfs user and continue as root from a fresh terminal
# session.

export NL=/mnt/nl

# 1 >> create directories and nodes
mkdir -pv $NL/{dev,proc,sys,run}
mknod -m 600 $NL/dev/console c 5 1
mknod -m 666 $NL/dev/null c 1 3

# 2 >> mount virtfs
mount -v --bind /dev $NL/dev
mount -vt devpts devpts $NL/dev/pts -o gid=5,mode=620
mount -vt proc proc $NL/proc
mount -vt sysfs sysfs $NL/sys
mount -vt tmpfs tmpfs $NL/run
if [ -h $NL/dev/shm ]; then
  mkdir -pv $NL/$(readlink $NL/dev/shm)
fi


