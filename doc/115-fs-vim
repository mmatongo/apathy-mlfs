# fs:		vim-8.1.2079
# sauce:	https://github.com/vim/vim/archive/v8.1.2079.tar.gz

# 1 >> change the vimrc location to /etc/vimrc
echo '#define SYS_VIMRC_FILE "/etc/vimrc"' >> src/feature.h

# 2 
./configure \
 --prefix=/usr \
 --with-features=huge \
 --with-compiledby='apathy-mlfs' \
 --enable-gpm \
 --enable-acl \
 --with-tlib=ncursesw \
 --with-x=no \
 --disable-gui \
 --enable-multibyte \
 --enable-cscope \
 --enable-netbeans \
 --disable-canberra

# 3
make && make install

# 4 >> symlink to vi for muscle memory situations
ln -sv vim /usr/bin/vi

# 5 >> delete docs
rm -rfv /usr/share/vim/vim81/doc

# 6 >> create a vimrc
cat > /etc/vimrc << "EOF"

source $VIMRUNTIME/defaults.vim
let skip_defaults_vim=1

set backupdir=~/.config/vim/backups
set directory=~/.config/vim/swaps

set ruler
set number

set nocompatible
set backspace=2
set mouse=

syntax on
au BufNewFile,BufFilePre,BufRead *.md set filetype=markdown

colorscheme desert
EOF
